@model IEnumerable<StudentManagementL1.Models.StudentViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.studentsVm.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.studentsVm.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.studentsVm.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.specializationVm.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.studentsVm.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.studentsVm.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.studentsVm.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.specializationVm.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.studentsVm.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.studentsVm.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.studentsVm.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
